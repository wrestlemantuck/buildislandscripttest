local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

local function createHollowBoxAroundPlayer()
    local boxSize = Vector3.new(10, 10, 10)
    local wallThickness = 1

    local function createWall(position, size)
        local wall = Instance.new("Part")
        wall.Size = size
        wall.Color = Color3.fromRGB(255, 0, 0)
        wall.Transparency = 0
        wall.Anchored = true
        wall.CanCollide = true
        wall.Parent = workspace
        wall.Position = position
        return wall
    end

    local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
    local basePosition = humanoidRootPart.Position

    createWall(basePosition + Vector3.new(0, 5, boxSize.Z / 2), Vector3.new(boxSize.X, boxSize.Y, wallThickness))
    createWall(basePosition + Vector3.new(0, 5, -boxSize.Z / 2), Vector3.new(boxSize.X, boxSize.Y, wallThickness))
    createWall(basePosition + Vector3.new(boxSize.X / 2, 5, 0), Vector3.new(wallThickness, boxSize.Y, boxSize.Z))
    createWall(basePosition + Vector3.new(-boxSize.X / 2, 5, 0), Vector3.new(wallThickness, boxSize.Y, boxSize.Z))
end

createHollowBoxAroundPlayer()
